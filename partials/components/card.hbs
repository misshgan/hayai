{{#if has_image_on_background}}
    <article class="card flex flex-col {{classes}} card--has-image-on-background">
        <a href="{{url}}" title="Visit publication page" class="card__link"></a>
        <figure class="card__image">
            {{> components/image
                image_type='post'
                image_class='lazyload'
                image_url=feature_image
                size_xs=true
                size_s=true
                size_m=true
                size_l=true
                size_xl=true
                loading='lazy'
            }}
        </figure>

        <div class="card__text flex flex-col">
            <div class="flex items-center content-space-b">
                {{> components/tags limit='3' classes='tags--hero'}}
                <time>{{reading_time minute="Only a minute" minutes="% min read"}}</time>
            </div>
            <h3>{{title}}</h3>
        </div>
    </article>
{{else if is_tag}}
    <a href="{{url}}" class="card card--tag {{classes}}">
        <article>
            {{#if feature_image}}
                <figure class="card__image">
                    {{> components/image
                        image_type='tag'
                        image_class='lazyload'
                        image_url=feature_image
                        size_xs=true
                        size_s=true
                        size_m=true
                        size_l=true
                        size_xl=true
                        loading='lazy'
                    }}
                </figure>
            {{/if}}
            <h3 class="card__title">{{name}}</h3>
            {{#if description}}
                <p class="card__description">{{description}}</p>
            {{/if}}
            {{#get "posts" filter='tag:{{slug}}'}}
                <span class="card__amount">{{posts.length}} posts</span>
            {{/get}}
        </article>
    </a>
{{else}}
    <article class="card card--category {{classes}}">
        {{#if is_image}}
            <figure class="card__image">
                {{> components/image
                    image_type='post'
                    image_class='lazyload'
                    image_url=feature_image
                    size_xs=true
                    size_s=true
                    size_m=true
                    size_l=true
                    size_xl=true
                    loading='lazy'
                }}
            </figure>
        {{/if}}
        <div class="card__text">
            <div class="card__header flex content-space-b">
                {{> components/tags is_article=true classes='tags--article' limit='1'}}
                <time>{{reading_time minute="Only a minute" minutes="% min read"}}</time>
            </div>
            <h3><a href="{{url}}">{{title}}</a></h3>
            {{#if is_custom_excerpt}}
                {{#if custom_excerpt}}
                    <p class="card__custom_excerpt">{{custom_excerpt}}</p>
                {{/if}}
            {{/if}}
        </div>
    </article>
{{/if}}